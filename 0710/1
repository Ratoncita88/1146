if (confirm("Хотите поиграть?")) {


	var x = 0;
	alert("Поехали!!");
	let zag1 = prompt ('Сто одежек и все без застежек?')
	if (zag1 == 'капуста' || zag1 =='лук' || zag1 =='салат')
	{
		x++;
		alert('Верно! Перейдем к следующей загадке')
	}
	else
	{
		alert('Не верно! Перейдем к следующей загадке')
	}
	let zag2 = prompt ('Зеленый и живой?')
	if (zag2 == 'крокодил' || zag2 == 'лягушка' || zag2 == 'ящерица')
	{
		x++;
		alert('Верно! Перейдем к следующей загадке')
	}
	else
	{
		alert('Не верно! Перейдем к следующей загадке')
	}
	let zag3 = prompt ('Без окон, без дверей полна горница людей?')
	if (zag3 == 'огурец' || zag3 == 'кабачок' || zag3 == 'баклажан')
	{
		x++;
		alert('Верно! Перейдем к следующей загадке')
	}
	else
	{
		alert('Не верно! Перейдем к следующей загадке')
	}
	
	alert('Ты молодец! У тебя правильных ответов ' + x);
	

} else {

  alert("Пока")

}

	
				
	
	
		

