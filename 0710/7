//факториал
function fact(n) {
	if ((typeof n == 'number') && (n > 0) && (Math.floor(n) == n)) {
		let res = 1;
		for (let i = 1; i <=n; i++){
			res = res * i;
		}
		return res;
	} else {
		return 'Wrong!!!';
	}
}
